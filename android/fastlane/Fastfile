# Customise this file, documentation can be found here:
# https://github.com/fastlane/fastlane/tree/master/fastlane/docs
# All available actions: https://docs.fastlane.tools/actions
# can also be listed using the `fastlane actions` command

# Change the syntax highlighting to Ruby
# All lines starting with a # are ignored when running `fastlane`

# If you want to automatically update fastlane if a new version is available:
#update_fastlane

fastlane_version "2.28.3"

default_platform :android

platform :android do
  
  desc "submit to alpha"
  lane :alpha do
    commit = last_git_commit
    notes = commit[:message]
    puts notes
    changelog = notes
    ENV["ENVFILE"]="./config/.env.staging"
    version_code = increment_version_code(
      gradle_file_path: "./app/build.gradle"
    )
    gradle(task: 'clean')
    gradle(
      task: "assemble",
      build_type: "Release"
    )
    upload_to_play_store(
      track: 'alpha',
      skip_upload_metadata: false,
      skip_upload_images: true,           
      skip_upload_screenshots:  true               
    )
    git_add(path: ".")
    git_commit(
      path: "./app/build.gradle",
      message: "Fastlane Android: Released new build #{version_code} [ci skip]"
    )
    push_to_git_remote
  end

  desc "submit to beta"
  lane :beta do
    version_code = increment_version_code(
      gradle_file_path: "./app/build.gradle"
    )
    gradle(task: 'clean')
    gradle(
      task: "assemble",
      build_type: "Release"
    )
    upload_to_play_store(
      track: 'beta',
      skip_upload_metadata: true,
      skip_upload_images: true,           
      skip_upload_screenshots:  true               
    )
    git_add(path: ".")
    git_commit(
      path: "./app/build.gradle",
      message: "Fastlane Android: Released new build #{version_code} [ci skip]"
    )
    push_to_git_remote
  end

  desc "promote alpha build to beta"
  lane :deploy do
    upload_to_play_store(
      track: 'beta',
      track_promote_to: 'production')
  end

  # we dont't have to keep browser window open and keep check on status
  after_all do |lane|
    slack(
       message: "Successfully deployed new App Update.",
       success: true,
       slack_url: "https://hooks.slack.com/services/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"
     )
  end

  error do |lane, exception|
    slack(
       message: exception.message,
       success: false,
       slack_url: "https://hooks.slack.com/services/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"
    )
  end
end
